@page
@model SecurityApp.Pages.Account.LoginModel
@{
}

<!-- Section: Design Block -->
<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
    <!-- Background image -->

    <div class="card mx-auto shadow-5-strong" style="
        width:400px;
        margin-top: -200px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
        <div class="card-body py-5 px-sm-4">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-5">Sign up now</h3>
                    <form method="post">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                        <!-- Login input -->
                        <div class="form-group text-start mb-4">
                            <label asp-for="Credential.UserName"></label>
                            <input asp-for="Credential.UserName" type="text" class="form-control" />
                            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-group text-start mb-4">
                            <label asp-for="Credential.Password"></label>
                            <input asp-for="Credential.Password" type="password" class="form-control" />
                            <span class="text-danger" asp-validation-for="Credential.Password"></span>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-center mb-4">
                            <input asp-for="Credential.RememberMe" class="form-check-input me-2" type="checkbox" />
                            <label asp-for="Credential.RememberMe" class="form-check-label" ></label>
                        </div>

                        <!-- Submit button -->
                        <input type="submit" class="btn btn-primary" value="Login" />

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>